    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/__mocks__/**/*",
    "src/test/**/*"
  ]
}